{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchFileNames": ["mobile/**"],
      "groupName": "mobile",
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "matchFileNames": ["server/**"],
      "groupName": "server",
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "matchFileNames": ["web/**"],
      "groupName": "web",
      "matchUpdateTypes": ["minor", "patch"]
    }
  ],
}
