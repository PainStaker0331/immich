{
  "compilerOptions": {
    "module": "Node16",
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es2022",
    "moduleResolution": "node16",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@test": ["test"],
      "@test/*": ["test/*"]
    }
  },
  "exclude": ["dist", "node_modules", "upload"]
}
